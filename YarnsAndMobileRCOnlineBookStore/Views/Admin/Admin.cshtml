

@{
    ViewData["Title"] = "Admin";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group border border-info p-2 col-lg-8">
        <h4 for="uploadFile">Upload data</h4>
        <p>All three files (Books, Members, and Sales/Reviews) must be uploaded before starting import</p>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="fileDataType" value="Book">
            <label class="form-check-label" for="inlineCheckbox1">Books</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="fileDataType" value="Member">
            <label class="form-check-label" for="inlineCheckbox1">Members</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="fileDataType" value="SaleReview">
            <label class="form-check-label" for="inlineCheckbox1">Sales and Reviews</label>
        </div>
        <input type="file" name="file" class="form-control-file" id="uploadFile" />
        <button type="submit" class="btn btn-info mt-3">Upload file</button>
    </div>
</form>
<a asp-action="ImportData" class="btn btn-danger">Import Data</a>