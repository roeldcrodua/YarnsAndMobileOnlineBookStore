@using Microsoft.AspNetCore.Identity
@using YarnsAndMobileRCOnlineBookStore.Models.Data
@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager

<ul class="navbar-nav mr-auto ml-auto ">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item h4">
        <a  class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item h4">
        <form  class="form-inline h4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ">
        <a class="nav-link  h4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item h4">
        <a class="nav-link  h4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
